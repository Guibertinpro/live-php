{% extends "base.html.twig" %}

{% block body %}
<div class="container">
  <h1>Liste des utilisateurs</h1>
  <h3>Nombre d'utilisateurs : {{ users|length }}</h3>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 row-cols-xl-4 g-4">
{% for user in users %}
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{ user.name }}</h5>
        <p class="card-text">{{ user.email }}</p>
      </div>
    </div>
  </div>
  {% else %}
    <div>Aucun utilisateurs</div>
{% endfor %}
</div>

{% endblock %}